@model Book
    

    <form asp-action="Index" method="post" class="form-horizontal" role="form">

        <!--Display Validation Error Messages based on model-->
        <div asp-validation-summary="All" class="text-danger"></div>

        <!--Form Labels and input boxes for saving a book to the database-->
        <div class="form-group">
            <label asp-for="BookName" class="col-md-6 control-label">Book Name</label>
            <div class="col-md-6">
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AuthorName" class="col-md-2 control-label">Author Name</label>
            <div class="col-md-5">
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label">Price $</label>
            <div class="col-md-5">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="Publisher" class="col-md-2 control-label">Publisher</label>
            <div class="col-md-5">
                <select asp-for="Publisher" class="custom-select custom-select-lg">
                    <option selected>Choose a Publisher from this List</option>
                    <option value="Penguin Random House">Penguin Random House</option>
                    <option value="Hachette Livre">Hachette Livre</option>
                    <option value="Springer Nature">Springer Nature</option>
                    <option value="Simon & Schuster">Simon & Schuster</option>
                    <option value="Harper Collins">Harper Collins</option>
                </select>
                <span asp-validation-for="Publisher" class="text-danger"></span>
            </div>
        </div>



        <!--Button to Save Book Data entered to the database-->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-primary" value="Save Book"/>
            </div>   
        </div>

    </form>